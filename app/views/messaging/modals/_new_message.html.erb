<div class="modal fade" id="new_message_modal" tabindex="-1" role="dialog" aria-labelledby="new_message" aria-hidden="true">
  <%= form_with model: @message, url: '/messaging' do |message| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t 'new_message' %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render partial: 'messaging/forms/new_message', locals: { message: message } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t 'cancel' %></button>
        <%= button_tag (t 'send'), type: 'submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <% end %>
</div>