<div class="form p-2">
  <div class="form-group mb-3">
    <div class="form-row">
      <%= message.label :phone_number %>
    </div>
    <div class="form-row">
      <%= message.phone_field :phone_number, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group mb-3">
    <div class="form-row">
      <%= message.label :message %>
    </div>
    <div class="form-row">
      <%= message.text_area :message, class: 'form-control' %>
    </div>
  </div>
</div>